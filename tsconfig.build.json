{
    "compilerOptions": {
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noEmitOnError": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "lib": ["ES6"],
        "target": "ESNext",

        "moduleResolution": "Node",
        "module": "CommonJS"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
